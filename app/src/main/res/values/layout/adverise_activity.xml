<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/footer"
    android:layout_weight="0.1"
    android:orientation="vertical">

    <EditText android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_d"
        android:padding="10dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="Search Advertise Name or No...." />

    <ListView
        android:id="@+id/lvstory_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical|horizontal"
        android:background="@color/white"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightreseved"
        android:text="All Rights Reserved @ Ethiqs Spaces Limited"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="13sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="13sp" />
</LinearLayout>