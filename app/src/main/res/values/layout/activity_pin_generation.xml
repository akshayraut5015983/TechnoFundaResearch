<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pingeneration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
    tools:context=".pinmaster.PinGeneration">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/card_background"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="PIN GENERATION"
                android:textColor="#ff393939"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ffb9b9b9" />

            <Spinner
                android:id="@+id/pinnam_groups"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.05"
                android:background="@drawable/btn_dropdown"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColorHint="#cccccc" />

            <EditText
                android:id="@+id/pinpoint_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_selector"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:hint="Pin Point"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/pinamount_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_selector"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:inputType="number"
                android:hint="Pin Amount"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/pinquantity_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_selector"
                android:layout_marginTop="5dp"
                android:hint="Pin Quantity"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btngen_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn"
                android:padding="10dp"
                android:text="Generate"
                android:gravity="center"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
