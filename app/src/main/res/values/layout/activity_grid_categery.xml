<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grid_categery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shopping.grid_categery">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <include layout="@layout/footer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="400dp">
        <GridView
            android:id="@+id/grid_list_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="70dp"
            android:numColumns="2"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="15dp"
            android:stretchMode="columnWidth"
            android:gravity="center">

        </GridView>
    </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rightreseved"
                            android:text="All Rights Reserved @ Ethiqs Spaces Limited"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="75dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                            android:textColor="#000000"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="60dp"
                            android:textSize="13sp" />

</RelativeLayout>
