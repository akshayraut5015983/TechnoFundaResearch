<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/footer"/>
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_weight="0.1"
        android:layout_marginTop="85dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_login_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="Fill Your All Details"
            android:textColor="#ff393939"
            android:textSize="18.0sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffb9b9b9" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edit_login_id"
                    android:background="@drawable/input_selector"
                    android:hint="Login Id"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:padding="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edit_topup_name"
                    android:focusable="false"
                    android:background="@drawable/input_selector"
                    android:hint="Your Name"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/edit_current_status"
                    android:focusable="false"
                    android:background="@drawable/input_selector"
                    android:hint="Current Status"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal" />

                <Spinner
                    android:id="@+id/package_groups"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.05"
                    android:background="@drawable/btn_dropdown"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColorHint="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Pin Amount :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/tex_pin_amount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="Pin Value :" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/text_pin_value"/>
            </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_amount"
                    style="@style/DefaultButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn"
                    android:padding="14dp"
                    android:text="Submit"
                    android:gravity="center"
                    android:textColor="#fff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rightreseved"
                    android:text="All Rights Reserved @ Ethiqs Spaces Limited"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </RelativeLayout>
