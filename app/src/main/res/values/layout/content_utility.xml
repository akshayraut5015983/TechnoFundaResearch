<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".utility.Utility"
    tools:showIn="@layout/app_bar_utility">

    <include layout="@layout/footer"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/makerecharge"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9645B39D">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recharge or Pay for"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/rechargefor"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/mobilerecharge"
                                    android:src="@drawable/mobile_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@id/mobilerecharge"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/dth"
                                    android:src="@drawable/dth_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DTH"
                                    android:layout_below="@id/dth"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/datacard"
                                    android:src="@drawable/datacard_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="DataCard"
                                    android:layout_below="@id/datacard"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/electicity"
                                    android:src="@drawable/electicity_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Electicity"
                                    android:layout_below="@id/electicity"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/broadbans"
                                    android:src="@drawable/broadband_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="BroadBand"
                                    android:layout_below="@id/broadbans"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/fees"
                                    android:src="@drawable/fees_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="Fees"
                                    android:layout_below="@id/fees"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/landline"
                                    android:src="@drawable/landline_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Landline"
                                    android:layout_below="@id/landline"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9645B39D"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book with our Travel Services"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/bookservices"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/flight"
                                    android:id="@+id/flight_book"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flight"
                                    android:layout_below="@id/flight_book"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/bus_icon"
                                    android:id="@+id/bus"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bus"
                                    android:layout_below="@id/bus"
                                    android:layout_marginLeft="40dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/hotel"
                                    android:id="@+id/hotel"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hotel"
                                    android:layout_below="@id/hotel"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/cab"
                                    android:id="@+id/cab"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CAB"
                                    android:layout_below="@id/cab"
                                    android:layout_marginLeft="40dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/train_icon"
                                    android:id="@+id/train"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Train"
                                    android:layout_below="@id/train"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/mobile_icon"
                                    android:id="@+id/movie"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Movie"
                                    android:layout_below="@id/movie"
                                    android:layout_marginLeft="30dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="5dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:src="@drawable/event_icon"
                                android:id="@+id/event"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event"
                                android:layout_below="@id/event"
                                android:layout_marginLeft="30dp"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"/>
                        </RelativeLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightreseved"
                android:text="All Rights Reserved @ Ethiqs Spaces Limited"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
