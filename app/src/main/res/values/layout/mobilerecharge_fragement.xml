<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/footer"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="Recharge Your Mobile"
            android:textColor="#ff393939"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffb9b9b9" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/edit_mobile_number"
            android:imeOptions="actionNext"
            android:background="@drawable/input_selector"
            android:hint="Your Mobile Number"
            android:padding="10dp"
            android:maxLength="10"
            android:inputType="number"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:id="@+id/code_groups"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.05"
            android:background="@drawable/btn_dropdown"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColorHint="#cccccc" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edit_amount"
            android:padding="10dp"
            android:inputType="number"
            android:hint="Amount"
            android:imeOptions="actionNext"
            android:background="@drawable/input_selector"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_submit_amount"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_btn"
            android:padding="14dp"
            android:text="Proceed To Recharge"
            android:gravity="center"
            android:textColor="#fff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightreseved"
            android:text="All Rights Reserved @ Ethiqs Spaces Limited"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
