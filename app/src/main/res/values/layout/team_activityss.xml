<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/gray_d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_weight="0.1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <EditText android:id="@+id/inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:hint="Search Name or Id...." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="16dp"
            android:background="@drawable/texview_design"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/txt_cnt_total" />
        <ListView
            android:id="@+id/team_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/background_color"/>
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rightreseved"
    android:text="All Rights Reserved @ Ethiqs Spaces Limited"
    android:layout_gravity="center_horizontal"
    android:textColor="#000000"
    android:textSize="13sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textSize="13sp" />
</LinearLayout>