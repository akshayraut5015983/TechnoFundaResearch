<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawer_layoututility">
      
     
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="250dp"
                          android:src="@drawable/makerecharge"/>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="100dp"
                          android:background="#9645B39D">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Recharge or Pay for"
                              android:textStyle="bold"
                              android:textSize="30sp"
                              android:layout_marginLeft="170dp"
                              android:layout_marginTop="30dp"
                              android:layout_marginBottom="20dp"
                              android:id="@+id/rechargefor"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp">

                          <HorizontalScrollView
                              android:layout_width="match_parent"
                              android:layout_height="250dp">
                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="180dp"
                                  android:layout_marginTop="70dp"
                                  android:orientation="horizontal">
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/mobilerecharge"
                                          android:src="@drawable/mobile_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Mobile"
                                          android:layout_marginLeft="40dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"
                                          android:layout_below="@id/mobilerecharge"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/dth"
                                          android:src="@drawable/dth_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="DTH"
                                          android:layout_below="@id/dth"
                                          android:layout_marginLeft="50dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/datacard"
                                          android:src="@drawable/datacard_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="30dp"
                                          android:text="DataCard"
                                          android:layout_below="@id/datacard"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/electicity"
                                          android:src="@drawable/electicity_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="20dp"
                                          android:text="Electicity"
                                          android:layout_below="@id/electicity"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/broadbans"
                                          android:src="@drawable/broadband_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="25dp"
                                          android:text="BroadBand"
                                          android:layout_below="@id/broadbans"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/fees"
                                          android:src="@drawable/fees_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="40dp"
                                          android:text="Fees"
                                          android:layout_below="@id/fees"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:id="@+id/landline"
                                          android:src="@drawable/landline_icon"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_marginLeft="30dp"
                                          android:text="Landline"
                                          android:layout_below="@id/landline"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                              </LinearLayout>

                          </HorizontalScrollView>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="100dp"
                          android:background="#9645B39D"
                          android:layout_marginTop="20dp">

                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Book with our Travel Services"
                              android:layout_marginLeft="150dp"
                              android:layout_marginTop="40dp"
                              android:layout_marginBottom="20dp"
                              android:textStyle="bold"
                              android:textSize="30sp"
                              android:id="@+id/bookservices"/>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="250dp">
                          <HorizontalScrollView
                              android:layout_width="match_parent"
                              android:layout_height="280dp">
                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="200dp"
                                  android:layout_marginTop="80dp"
                                  android:orientation="horizontal">

                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/flight"
                                          android:id="@+id/flight_book"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Flight"
                                          android:layout_below="@id/flight_book"
                                          android:layout_marginLeft="40dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/bus_icon"
                                          android:id="@+id/bus"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Bus"
                                          android:layout_below="@id/bus"
                                          android:layout_marginLeft="50dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/hotel"
                                          android:id="@+id/hotel"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Hotel"
                                          android:layout_below="@id/hotel"
                                          android:layout_marginLeft="40dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/cab"
                                          android:id="@+id/cab"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="CAB"
                                          android:layout_below="@id/cab"
                                          android:layout_marginLeft="50dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>

                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/train_icon"
                                          android:id="@+id/train"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Train"
                                          android:layout_below="@id/train"
                                          android:layout_marginLeft="30dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="20dp">
                                      <ImageView
                                          android:layout_marginTop="15dp"
                                          android:layout_width="150dp"
                                          android:layout_height="90dp"
                                          android:src="@drawable/mobile_icon"
                                          android:id="@+id/movie"
                                          />
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="Movie"
                                          android:layout_below="@id/movie"
                                          android:layout_marginLeft="40dp"
                                          android:textSize="25sp"
                                          android:textColor="@color/black"
                                          android:layout_marginTop="10dp"/>
                                  </RelativeLayout>
                                  <RelativeLayout
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                      android:padding="20dp">
                                  <ImageView
                                      android:layout_marginTop="15dp"
                                      android:layout_width="150dp"
                                      android:layout_height="90dp"
                                      android:src="@drawable/event_icon"
                                      android:id="@+id/event"
                                      />
                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Event"
                                      android:layout_below="@id/event"
                                      android:layout_marginLeft="40dp"
                                      android:textSize="12sp"
                                      android:textColor="@color/black"
                                      android:layout_marginTop="10dp"/>
                              </RelativeLayout>
                              </LinearLayout>
                          </HorizontalScrollView>
                      </LinearLayout>

                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>
      </ScrollView>
        
        <android.support.design.widget.NavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/navigation_viewutility"
            app:menu="@menu/utilitydrawer" />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>