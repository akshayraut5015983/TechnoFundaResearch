<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frontview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.technofunda.ethiqs.frontview">
    <include layout="@layout/footer"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1060dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="#ffb9b9b9"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="horizontal"
                    android:id="@+id/linear">
                    <ViewFlipper
                        android:id="@+id/viewflipper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoStart="true"
                        android:flipInterval="1500" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shoppingspree_banner"
                            android:id="@+id/imageView2"
                            android:background="#620022"
                            android:contentDescription="@string/str_img1"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/str_img2"
                            android:background="#d7c797"
                            android:src="@drawable/bills_payment_main_banner"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#9086DDF7"
                            android:contentDescription="@string/str_img3"
                            android:src="@drawable/kids_shop"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/str_img3"
                            android:background="@color/black"
                            android:src="@drawable/boy_shop"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#d7c797"
                            android:contentDescription="@string/str_img3"
                            android:src="@drawable/shop_girl"
                            />

                    </ViewFlipper>

                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3.0dip"
                    android:background="#138D75"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:orientation="vertical"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:id="@+id/shopping_layout"
                        android:layout_width="400dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/shopping"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/shop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/shopping"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="180dp"
                            android:text="Shopping"
                            android:textColor="#000000"
                            android:textSize="27sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/utility_rr"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/referal"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/utility_pay"
                             />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/referal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="190dp"
                            android:text="Utility"
                            android:textColor="#000000"
                            android:textSize="27sp"
                            android:id="@+id/txtuti"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="18dp"
                            android:id="@+id/wallet"
                            android:layout_marginLeft="70dp"
                            android:src="@drawable/recharge1"
                           ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marchant Pay"
                            android:layout_marginBottom="20dp"
                            android:textColor="#000000"
                            android:textSize="27sp"
                            android:layout_marginLeft="150dp"
                            android:layout_below="@id/wallet"
                            android:id="@+id/textView15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/referal_master"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/recharge"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/iii" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recharge"
                            android:layout_marginLeft="130dp"
                            android:text="Referal Master"
                            android:textColor="#000000"
                            android:textSize="27sp" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/website"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/website_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/website"
                            android:layout_marginLeft="180dp"
                            android:text="Website"
                            android:textColor="#000000"
                            android:textSize="27sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/logout"
                            android:src="@drawable/logout_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textColor="#000000"
                            android:textSize="27sp"
                            android:layout_marginLeft="160dp"
                            android:layout_below="@id/logout"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightreseved"
                android:text="All Rights Reserved @ Ethiqs Spaces Limited"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="23sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textSize="23sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

