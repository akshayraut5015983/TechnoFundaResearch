<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/busbooking"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_margin="50dp"
               android:layout_height="600dp">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="150dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="From"
                       android:textSize="30sp"
                       android:textColor="@color/black"
                       android:id="@+id/fromtxt"/>
                   <EditText
                       android:layout_width="120dp"
                       android:textSize="30sp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="70dp"
                       android:id="@+id/edtfrom"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="To"
                       android:textSize="30sp"
                       android:layout_marginLeft="200dp"
                       android:textColor="@color/black"
                       android:id="@+id/totxt"/>
                   <EditText
                       android:layout_width="120dp"
                       android:textSize="30sp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="230dp"
                       android:id="@+id/edtto"
                       />
                   <View
                       android:layout_width="fill_parent"
                       android:layout_height="1.0dip"
                       android:background="#ffb9b9b9"
                       android:layout_margin="20dp"
                       android:layout_below="@id/edtfrom"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="50dp"
                       android:text="Departure Date"
                       android:textSize="30sp"
                       android:layout_below="@id/fromtxt"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/dapartureid"
                       android:layout_marginTop="70dp"/>
                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="10dp"
                       android:textSize="30sp"
                       android:layout_marginTop="10dp"
                       android:layout_below="@id/dapartureid"
                       />
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="2.0dip"
                       android:background="#ffb9b9b9"
                       android:layout_margin="20dp"
                       android:layout_below="@id/dapartureid"
                       />
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Search Buses"
                       android:layout_below="@id/dapartureid"
                       android:textAllCaps="false"
                       android:textSize="18sp"
                       android:background="@drawable/round_btn"/>
               </RelativeLayout>
           </LinearLayout>
           <RelativeLayout
               android:id="@+id/footer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:background="#fff"
               android:layout_marginTop="30dp"
               android:gravity="center" >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="All Rights Reserved Designed By Swaliya Softech"
                   android:gravity="center"
                   android:textColor="#000000"
                   android:textSize="12sp" />
           </RelativeLayout>
       </LinearLayout>
   </ScrollView>

    </LinearLayout>