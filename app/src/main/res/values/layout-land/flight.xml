<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/flightbooking"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="20dp">
                  <RadioGroup
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="20dp"
                      android:id="@+id/radiogrp_book">
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="One Way"
                          android:id="@+id/radioone_way"/>
                      <RadioButton
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Round Trip"
                          />
                  </RadioGroup>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="From"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:paddingLeft="30dp"
                      android:layout_below="@id/radiogrp_book"
                      />
                  <EditText
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/radiogrp_book"
                      android:layout_marginLeft="100dp"
                      android:id="@+id/edtfrom"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="To"
                      android:textColor="@color/black"
                      android:textSize="20sp"
                      android:layout_marginLeft="200dp"
                      android:paddingLeft="30dp"
                      android:layout_below="@id/radiogrp_book"
                      />
                  <EditText
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/radiogrp_book"
                      android:layout_marginLeft="260dp"
                      android:id="@+id/edtto"
                      />
                  <View
                      android:layout_width="fill_parent"
                      android:layout_height="1.0dip"
                      android:background="#ffb9b9b9"
                      android:layout_below="@id/edtfrom"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Depart"
                      android:textSize="20sp"
                      android:textColor="@color/black"
                      android:paddingTop="20dp"
                      android:paddingLeft="30dp"
                      android:id="@+id/iddepart"
                      android:layout_below="@id/edtfrom"/>
                  <EditText
                      android:layout_width="200dp"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/edtfrom"
                      android:layout_marginLeft="100dp"
                      android:layout_marginTop="20dp"
                      android:id="@+id/edtdepart"
                      />
                  <View
                      android:layout_width="fill_parent"
                      android:layout_height="1.0dip"
                      android:background="#ffb9b9b9"
                      android:layout_marginTop="20dp"
                      android:layout_below="@id/iddepart"
                      />
                  <Button
                      android:layout_width="320dp"
                      android:layout_height="wrap_content"
                      android:text="Search Flight"
                      android:background="@drawable/round_btn"
                      android:layout_below="@id/iddepart"
                      android:layout_marginTop="50dp"
                      android:layout_marginLeft="30dp"
                      android:textAllCaps="false"
                      android:textSize="18sp"/>
              </RelativeLayout>
          </LinearLayout>
          <RelativeLayout
              android:id="@+id/footer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:background="#fff"
              android:layout_marginTop="30dp"
              android:gravity="center" >

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="All Rights Reserved Designed By Swaliya Softech"
                  android:gravity="center"
                  android:textColor="#000000"
                  android:textSize="12sp" />
          </RelativeLayout>
      </LinearLayout>
  </ScrollView>
</LinearLayout>