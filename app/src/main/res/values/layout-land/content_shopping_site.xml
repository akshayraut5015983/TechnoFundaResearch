<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.technofunda.shopping.Shopping_site"
    tools:showIn="@layout/app_bar_shopping_site">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4876D7C4"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Shop by category  "
                    android:background="@drawable/round_btn"
                    android:textAllCaps="false"
                    android:id="@+id/shopbycategory"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search Product here..."
                    android:backgroundTint="#BA4A00"
                    android:drawableLeft="@android:drawable/ic_menu_search"
                    android:inputType="text"
                    android:padding="10dp"
                    android:id="@+id/search"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimary">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:src="@drawable/off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Offers"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="45dp"
                            android:textSize="15dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="160dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/mob"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eletronics"
                            android:layout_marginLeft="150dp"
                            android:textSize="15dp"
                            android:layout_marginTop="45dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="260dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/lifestyle1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lifestyle"
                            android:textSize="15sp"
                            android:layout_marginLeft="260dp"
                            android:layout_marginTop="45dp"/>

                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="40dp"
                            android:src="@drawable/home1"
                            android:layout_marginLeft="360dp"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textSize="15dp"
                            android:layout_marginLeft="365dp"
                            android:layout_marginTop="45dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="450dp"
                            android:src="@drawable/more1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:layout_marginLeft="455dp"
                            android:layout_marginTop="45dp"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                    <ViewFlipper
                        android:id="@+id/viewflipper"
                        android:layout_marginTop="45dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoStart="true"
                        android:flipInterval="1500" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/banner"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:id="@+id/imageshop" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/womensshopping"
                            android:layout_marginTop="20dp"
                            android:background="@color/gray_d"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/boyshopping"
                            android:layout_marginTop="30dp"
                            android:background="@color/gray_e"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home"
                            android:layout_marginTop="30dp"
                            android:background="#1076D7C4" />

                    </ViewFlipper>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="300dp"
                            android:paddingLeft="150dp"
                            android:paddingRight="40dp"
                            android:textStyle="bold"
                            android:shadowColor="@color/black"
                            android:textColor="@color/black"
                            android:text="We offer quality in great cost"
                            android:textSize="20sp"/>
                    </RelativeLayout>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4876D7C4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latest Products"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtproduct"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all"
                        android:textAllCaps="false"
                        android:layout_marginLeft="480dp"
                        android:background="@drawable/round_btn"
                        android:id="@+id/btnviewall"/>
                </RelativeLayout>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rr">
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="380dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="200dp"
                            android:background="@color/gray">

                        </View>
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="380dp"
                            android:id="@+id/mobilephone"
                            android:src="@drawable/mobilephone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Samsung Pro"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginLeft="50dp"
                            android:layout_below="@id/mobilephone"/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="380dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray"
                            android:layout_marginLeft="200dp"
                            />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="380dp"
                            android:id="@+id/watch"
                            android:src="@drawable/watch"
                            android:layout_weight="1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titen HandWatch"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="50dp"
                            android:layout_below="@id/watch"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="380dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray"
                            android:layout_marginLeft="200dp"
                            />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="380dp"
                            android:id="@+id/sound"
                            android:src="@drawable/sounds"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Sounds"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginLeft="50dp"
                            android:layout_below="@id/sound"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="380dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray"
                            android:layout_marginLeft="200dp"
                            />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="320dp"
                            android:id="@+id/dress"
                            android:src="@drawable/dress"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panjabi Dress Material"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="60dp"
                            android:layout_below="@id/dress"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="360dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="220dp"
                            />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="360dp"
                            android:id="@+id/sofa"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/sofa"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sofa Set"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="80dp"
                            android:layout_below="@id/sofa"/>
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4876D7C4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deal of the Day"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="220dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="250dp"
                            android:paddingLeft="10dp"
                            android:src="@drawable/offer1"/>
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="240dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="250dp"
                            android:paddingLeft="10dp"
                            android:src="@drawable/offer2"/>
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="240dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/offer3"/>
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="240dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="50dp"
                            android:paddingLeft="10dp"

                            android:src="@drawable/offer4"/>
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="240dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="50dp"

                            android:src="@drawable/offer5"/>
                        <View
                            android:layout_width="1.5dip"
                            android:layout_height="240dp"
                            android:background="@color/gray"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="50dp"
                            android:paddingLeft="10dp"

                            android:src="@drawable/offer6"/>

                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#4876D7C4">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>