<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/dthfragment"
    android:orientation="vertical">
    <include layout="@layout/footer"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="Recharge Your DTH Voucher"
                android:textColor="#ff393939"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ffb9b9b9" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:maxLength="10"
                android:inputType="number"
                android:id="@+id/edit_subscrib_id"
                android:imeOptions="actionNext"
                android:background="@drawable/input_selector"
                android:hint="Subscriber Id"
                android:padding="10dp"
                android:layout_gravity="center_horizontal" />

            <Spinner
                android:id="@+id/subscribid_grps"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.05"
                android:background="@drawable/btn_dropdown"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColorHint="#cccccc" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/edit_rchsubcrib"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Recharge Amount"
                android:imeOptions="actionNext"
                android:background="@drawable/input_selector"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/btn_submit_subscib"
                style="@style/DefaultButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/round_btn"
                android:padding="14dp"
                android:text="Proceed To Recharge"
                android:gravity="center"
                android:textColor="#fff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightreseved"
                android:text="All Rights Reserved @ Ethiqs Spaces Limited"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
                android:textColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

