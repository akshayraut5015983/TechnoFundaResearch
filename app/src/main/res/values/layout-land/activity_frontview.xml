<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frontview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.technofunda.ethiqs.frontview">
<include layout="@layout/footer"/>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="300dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="1.0dip"
                  android:background="#ffb9b9b9"
                  />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:orientation="horizontal"
                  android:id="@+id/linear">
                  <ViewFlipper
                      android:id="@+id/viewflipper"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:autoStart="true"
                      android:flipInterval="1500" >

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:src="@drawable/shoppingspree_banner"
                          android:id="@+id/imageView2"
                          android:background="#620022"
                          android:contentDescription="@string/str_img1"
                          />

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:contentDescription="@string/str_img2"
                          android:background="#d7c797"
                          android:src="@drawable/bills_payment_main_banner"
                          />
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="#9086DDF7"
                          android:contentDescription="@string/str_img3"
                          android:src="@drawable/kids_shop"
                          />
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:contentDescription="@string/str_img3"
                          android:background="@color/black"
                          android:src="@drawable/boy_shop"
                          />
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="#d7c797"
                          android:contentDescription="@string/str_img3"
                          android:src="@drawable/shop_girl"
                          />

                  </ViewFlipper>

              </LinearLayout>
              <View
                  android:layout_width="fill_parent"
                  android:layout_height="3.0dip"
                  android:background="#138D75"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#ffffff">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <RelativeLayout
                      android:id="@+id/shopping_layout"
                      android:layout_width="300dp"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">

                      <ImageView
                          android:id="@+id/shopping"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginLeft="150dp"
                          android:layout_marginTop="20dp"
                          android:src="@drawable/shop" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/shopping"
                          android:layout_marginBottom="20dp"
                          android:layout_marginLeft="160dp"
                          android:text="Shopping"
                          android:textColor="#000000"
                          android:textSize="17sp" />

                  </RelativeLayout>


                  <RelativeLayout
                      android:id="@+id/utility_rr"
                      android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:layout_height="match_parent">

                      <ImageView
                          android:id="@+id/referal"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginLeft="50dp"
                          android:layout_marginTop="20dp"
                          android:src="@drawable/utility_pay" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/referal"
                          android:layout_marginBottom="20dp"
                          android:layout_marginLeft="80dp"
                          android:text="Utility"
                          android:textColor="#000000"
                          android:textSize="17sp"
                          android:id="@+id/txtuti"
                          />
                  </RelativeLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <RelativeLayout
                      android:layout_width="300dp"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content"
                      >
                      <ImageView
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="18dp"
                          android:id="@+id/wallet"
                          android:src="@drawable/recharge1"
                          android:layout_marginLeft="150dp"
                          android:layout_alignParentTop="true"></ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Marchant Pay"
                          android:layout_marginBottom="20dp"
                          android:textColor="#000000"
                          android:textSize="17sp"
                          android:layout_marginLeft="150dp"
                          android:layout_below="@id/wallet"
                          android:id="@+id/textView15" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/referal_master"
                      android:layout_marginTop="5dp">
                      <ImageView
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginLeft="60dp"
                          android:layout_marginTop="20dp"
                          android:id="@+id/recharge"
                          android:src="@drawable/iii"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Referal Master"
                          android:textColor="#000000"
                          android:textSize="17sp"
                          android:layout_below="@+id/recharge"
                          android:layout_marginLeft="40dp" />
                  </RelativeLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="130dp"
                  android:orientation="horizontal">

                  <RelativeLayout
                      android:layout_width="300dp"
                      android:layout_height="match_parent"
                      android:layout_marginTop="5dp">

                      <ImageView
                          android:id="@+id/website"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginLeft="150dp"
                          android:layout_marginTop="30dp"
                          android:src="@drawable/website_img" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/website"
                          android:layout_marginLeft="170dp"
                          android:text="Website"
                          android:textColor="#000000"
                          android:textSize="17sp" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1.5dip"
                          android:layout_below="@id/website"
                          android:layout_marginTop="43dp"
                          android:background="#ffb9b9b9" />

                  </RelativeLayout>

                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="80dp"
                          android:layout_height="60dp"
                          android:layout_marginLeft="60dp"
                          android:layout_marginTop="30dp"
                          android:id="@+id/logout"
                          android:src="@drawable/logout_img"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Logout"
                          android:textColor="#000000"
                          android:textSize="17sp"
                          android:layout_marginLeft="70dp"
                          android:layout_below="@id/logout"
                          />
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1.5dip"
                          android:background="#ffb9b9b9"
                          android:layout_marginTop="43dp"
                          android:layout_below="@id/logout"/>

                  </RelativeLayout>

              </LinearLayout>
                       </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/rightreseved"
              android:text="All Rights Reserved @ Ethiqs Spaces Limited"
              android:layout_alignParentBottom="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="10dp"
              android:textColor="#000000"
              android:textSize="13sp" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
              android:textColor="#000000"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="5dp"
              android:layout_gravity="center_horizontal"
              android:textSize="13sp" />

      </LinearLayout>

  </ScrollView>

</RelativeLayout>

