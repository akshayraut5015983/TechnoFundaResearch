<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <stroke
                android:width="2dip"
                android:color="#696e6e"/>

            <padding
                android:bottom="4dp"
                android:left="4dp"

                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>