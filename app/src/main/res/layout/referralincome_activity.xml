<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <include layout="@layout/footer"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/footer"
        android:layout_weight="0.1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TableLayout
                    android:id="@+id/amortization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:background="@color/blue_facebook1">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="LoginID"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/textView7" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Direct"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/textView11" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Amount"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/textView12" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Income"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="TDS"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Admin"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="NetPay"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </TableRow>
                    <ListView
                        android:id="@+id/refrin_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical|horizontal"
                        android:divider="#b5b5b5"
                        android:background="@drawable/list_selector"
                        android:dividerHeight="1dp"/>
                </TableLayout>

                <TableLayout
                    android:id="@+id/totall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:background="@color/background_color">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="Total :"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txt_rinc"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txt_rtds"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txt_radm"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txt_rnet"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightreseved"
        android:text="All Rights Reserved @ SRS Marketing"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="9sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered and Designed by Swaliya Softech Pvt.Ltd."
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:textSize="9sp" />
</RelativeLayout>
