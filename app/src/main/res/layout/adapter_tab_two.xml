<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/derivatives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tblyt"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/blackDemnim2"
            android:orientation="horizontal">

            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtcompname"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Company name"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/comp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"

                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Company name"
                        android:textColor="#A0A0A0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="120dp">


                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="price"

                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"

                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Price"

                        android:textColor="#A0A0A0" />

                </LinearLayout>

            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/entryprice"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Entry Price"
                        android:textColor="#A0A0A0" />
                    <TextView
                        android:id="@+id/txtentryprice"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="Entry Price"
                        android:textColor="#ffffff"/>

                </LinearLayout>
                <View
                    android:layout_width="1.0dp"
                    android:layout_height="70dp"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stoploss"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Stop Loss"
                        android:textColor="#A0A0A0" />
                    <TextView
                        android:id="@+id/txtstoploss"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="Stop Loss"
                        android:textColor="#ffffff"/>

                </LinearLayout>
                <View
                    android:layout_width="1.0dp"
                    android:layout_height="70dp"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/CMP"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="CMP"
                        android:textColor="#A0A0A0" />
                    <TextView
                        android:id="@+id/txtCMP"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="CMP"
                        android:textColor="#ffffff"/>

                </LinearLayout>

            </LinearLayout>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>